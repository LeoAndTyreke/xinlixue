page {
	background-color: #F8F8F8;
}

.header {
  width: 750rpx;
  height: 376rpx;
  background-color: #fff;
  margin-bottom: 9rpx;
}

.teacher-item {
  width: 750rpx;
  height: 224rpx;
  position: relative;
}

.teacher-cover {
  width: 168rpx;
  height: 168rpx;
  position: absolute;
  left: 30rpx;
  top: 28rpx;
  background-color: lightgreen;
}

.teacher-name {
  width: 200rpx;
  height: 34rpx;
  line-height: 34rpx;
  font-size: 34rpx;
  position: absolute;
  left: 218rpx;
  top: 40rpx;
}

.teacher-intro {
  width: 502rpx;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  color: #666;
  position: absolute;
  left: 218rpx;
  top: 102rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap; */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.teacher-intro-detail {
  width: 690rpx;
  height: 144rpx;
  line-height: 48rpx;
  font-size: 26rpx;
  color: #666;
  margin: 0 30rpx;
}

.content {
	background-color: #fff;
	width: 750rpx;
	position: relative;
}

.square {
	width: 8rpx;
	height: 22rpx;
	position: absolute;
	left: 30rpx;
	top: 32rpx;
	background-color: #FF7745;
}

.content-title {
	width: 750rpx;
	height: 86rpx;
	line-height: 86rpx;
	font-size: 30rpx;
	padding-left: 48rpx;
	box-sizing: border-box;
	margin-bottom: 19rpx;
}

.fixed-btn {
	width: 750rpx;
	height: 110rpx;
	line-height: 110rpx;
	font-size: 36rpx;
	color: #fff;
	background-color: #FF7D4F;
	text-align: center;
	position: fixed;
	bottom: 0;
}