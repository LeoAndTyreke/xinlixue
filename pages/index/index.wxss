page {
	background-color: #F8F8F8;
}
.index-slider {
	width: 750rpx;
	height: 290rpx;
	margin: 0;
}
.slide-image {
  background-color: red;
  width: 750rpx;
  height: 290rpx;
}

.search {
  width: 630rpx;
  height: 60rpx;
  position: absolute;
  left: 60rpx;
  top: 20rpx;
  z-index: 20;
  border-radius: 30rpx;
  background-color: rgba(0, 0, 0, .1);
  box-sizing: border-box;
  padding-left: 20rpx;
  background-clip: padding-box;
}

.search-plhd {
	width: 630rpx;
	height: 60rpx;
	background: url('data:image/png;base64,');
	background-size: 32rpx;
	background-position: 160rpx 18rpx;
	background-repeat: no-repeat;
	opacity: 1;
	color: #fff;
	font-size: 30rpx;
	line-height: 60rpx;
	text-align: center;
}

.search-plhd-focus {
	background-position: 20rpx 18rpx;
}

.categories {
	/* width: 750rpx; */
	height: 161rpx;
	background-color: lavender;
	text-align: center;
}

.category-all {
	width: 1360rpx;
	display: flex;
	position: relative;
}

.category {
	width: 170rpx;
	height: 161rpx;
	/* float: left; */
	background-color: lightseagreen;
	position: relative;
}

.category-icon {
	/* width: 100% */
}

.category-name {
	width: 100%;
	height: 30rpx;
	line-height: 30rpx;
	font-size: 28rpx;
	color: #333;
	position: absolute;
	left: 0;
	top: 100rpx;
}
.list {
	width: 750rpx;
	margin-top: 6rpx; 
}

.list-header {
	width: 750rpx;
	height: 44rpx;
}

.list-title {
	float: left;
	margin: 7rpx 432rpx 7rpx 30rpx;
	width: 130rpx;
	height: 30rpx;
	line-height: 30rpx;
	font-size: 28rpx;
	padding-left: 10rpx;
	box-sizing: border-box;
}

.list-more {
	float: left;
	width: 150rpx;
