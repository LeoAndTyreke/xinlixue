page {
    background-color: #f8f8f8;
}

.header {
    background-color: #fff;
}

.cover {
    width: 750rpx;
    height: 320rpx;
    background-color: greenyellow;
}

.title {
    width: 690rpx;
    line-height: 48rpx;
    font-size: 36rpx;
    margin: 19rpx 30rpx;
}

.info {
    width: 750rpx;
    height: 26rpx;
}

.teacher-icon {
    float: left;
    width: 24rpx;
    height: 18rpx;
    margin: 4rpx 16rpx 4rpx 30rpx;
}

.teacher-name {
    float: left;
    width: 110rpx;
    margin-right: 24rpx;
}

.time-icon {
    float: left;
    width: 20rpx;
    height: 20rpx;
    margin: 3rpx 0;
}

.duration {
    float: left;
    width: 120rpx;
    margin: 0 16rpx;
}

.info-txt {
    height: 26rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color: #666;
}

.collect-txt {
    width: 52rpx;
    float: right;
    margin-right: 30rpx;
}

.collect-icon {
    width: 24rpx;
    height: 24rpx;
    margin: 1rpx 16rpx;
    float: right;
}

.price {
    width: 300rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 44rpx;
    color: #ff4d10;
    margin: 28rpx 30rpx 19rpx;
}

.tabs {
    width: 750rpx;
    height: 80rpx;
    margin-top: 9rpx;
    background-color: #fff;
}

.tab {
    width: 375rpx;
    height: 80rpx;
    border-bottom: 2rpx solid #f2f2f2;
    color: #999;
    line-height: 80rpx;
    font-size: 30rpx;
    float: left;
    position: relative;
    box-sizing: border-box;
}

.tab-left {
    padding-left: 180rpx;
}

.tab-right {
    padding-left: 75rpx;
}

.tab.active {
    color: #000;
}

.tab.active::after {
    display: block;
    content: '';
    width: 28rpx;
    height: 8rpx;
    position: absolute;
    bottom: 0;
    border-radius: 8rpx;
    background-color: #5695ff;
}

.tab.tab-left::after {
    left: 226rpx;
}

.tab.tab-right::after {
    left: 121rpx;
}

.tab-content {
    width: 100%;
    margin-bottom: 110rpx;
}

.detail {
    width: 750rpx;
    min-height: 264rpx;
    padding: 19rpx 30rpx;
    box-sizing: border-box;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #666;
    letter-spacing: 0.5rpx;
    margin-bottom: 9rpx;
    background-color: #fff;
}

.notice {
    background-color: #fff;
}

.notice-header {
    width: 750rpx;
    height: 48rpx;
    margin: 19rpx 0 32rpx;
}

.notice-icon {
    width: 26rpx;
    height: 26rpx;
    margin: 11rpx 16rpx 11rpx 30rpx;
    float: left;
}

.notice-title {
    width: 150rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    float: left;
}

.notice-content {
    width: 690rpx;
    font-size: 26rpx;
    color: #666;
    letter-spacing: 0.5rpx;
    line-height: 48rpx;
    margin: 0 30rpx 12rpx;
}

.fixed-btns {
    width: 750rpx;
    height: 110rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
}

.fixed-left-btn {
    width: 303rpx;
    height: 110rpx;
    float: left;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}

.fixed-right-btn {
    width: 447rpx;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 36rpx;
    float: left;
    color: #fff;
}

.money-icon {
    width: 37rpx;
    height: 41rpx;
    margin-right: 20rpx;
}

.money-num {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    text-align: center;
}
