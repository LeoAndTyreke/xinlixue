page {
    background-color: #f8f8f8;
}

.header {
  position: relative;
  padding: 10rpx 0;
    background-color: #fff;
}

.cover {
    width: 750rpx;
    height: 320rpx;
    background-color: #ccc;
}

.title {
    width: 690rpx;
    line-height: 48rpx;
    font-size: 36rpx;
    margin: 19rpx 30rpx;
}

.info {
    width: 750rpx;
    height: 26rpx;
}

.teacher-icon {
    position: absolute;
    width: 24rpx;
    height: 18rpx;
    left: 0;
    top:5rpx;
}

.teacher-name {
  position: relative;
    float: left;
    width: 110rpx;
    margin-left: 30rpx;
    margin-right: 15rpx;
    text-indent: 25rpx;
    overflow: hidden;
}

.time-icon {
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    left: 0;
    top:5rpx;
}

.duration {
  position: relative;
    float: left;
    width: 120rpx;
    margin: 0 16rpx;
    text-indent: 25rpx;
}

.info-txt {
    height: 26rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color: #666;
}

.collect-txt {
    position: relative;
    width: 100rpx;
    float: right;
    margin-right: 30rpx;
    text-indent: 30rpx;
}

.collect-icon {
    position: absolute;
    left: 0;
    top:1rpx;
    width: 24rpx;
    height: 24rpx;
}

.price {
    width: 300rpx;
    height: 44rpx;
    line-height: 44rpx;
    font-size: 33rpx;
    color: #ff4d10;
    margin: 28rpx 30rpx 19rpx;
}
.priceT {
    font-size: 44rpx;
    font-weight: bold;
}

.tabs {
    width: 750rpx;
    height: 80rpx;
    margin-top: 9rpx;
    background-color: #fff;
}

.tab {
    width: 375rpx;
    height: 80rpx;
    color: #999;
    line-height: 80rpx;
    font-size: 30rpx;
    float: left;
    position: relative;
    box-sizing: border-box;
}

.tab-left {
    padding-left: 180rpx;
}

.tab-right {
    padding-left: 75rpx;
}

.tab.active {
    color: #000;
}

.tab.active::after {
    display: block;
    content: '';
    width: 28rpx;
    height: 8rpx;
    position: absolute;
    bottom: 0;
    border-radius: 8rpx;
    background-color: #5695ff;
}

.tab.tab-left::after {
    left: 226rpx;
}

.tab.tab-right::after {
    left: 121rpx;
}

.tab-content {
  position: relative;
  width: 100%;
  padding-bottom: 110rpx;
}

.detail {
    width: 750rpx;
    min-height: 264rpx;
    padding: 19rpx 30rpx;
    box-sizing: border-box;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #666;
    letter-spacing: 0.5rpx;
    margin-bottom: 9rpx;
    background-color: #fff;
}

.notice {
    position: relative;
    padding: 10rpx 0;
    background-color: #fff;
}

.notice-header {
  position: relative;
    width: 750rpx;
    height: 48rpx;
    top:10rpx;
    margin-bottom: 10rpx;
}

.notice-icon {
    width: 26rpx;
    height: 26rpx;
    margin: 11rpx 16rpx 11rpx 30rpx;
    float: left;
}

.notice-title {
    width: 150rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    float: left;
}

.notice-content {
    width: 690rpx;
    font-size: 26rpx;
    color: #666;
    letter-spacing: 0.5rpx;
    line-height: 48rpx;
    margin: 0 30rpx 12rpx;
}

.fixed-btns {
    width: 750rpx;
    height: 110rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    background-color: #fff;
}

.fixed-left-btn {
    position: absolute;
    width: 303rpx;
    height: 110rpx;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.fixed-right-btn {
  position: absolute;
    width: 447rpx;
    height: 110rpx;
    right: 0;
    line-height: 110rpx;
    font-size: 36rpx;
    color: #fff;
}

.money-icon {
    width: 37rpx;
    height: 41rpx;
    margin-right: 20rpx;
}

.money-num {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    text-align: center;
}


.menu-item {
  width: 750rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 30rpx;
  position: relative;
}

.menu-title {
  background-color: #F6F7F8;
}

@import "../../temp/men.wxss";
@import "../../temp/pick.wxss";
@import "../../wxParse/wxParse.wxss";