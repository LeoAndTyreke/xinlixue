.controls {
    width: 750rpx;
    height: 423rpx;
    position: absolute;
}

.play-btn {
    width: 36rpx;
    height: 42rpx;
    position: absolute;
    left: 358rpx;
    top: 191rpx;
}

.controls-bar {
    width: 750rpx;
    height: 60rpx;
    position: absolute;
    bottom: 0;
