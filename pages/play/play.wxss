    left: 91rpx;
    top: 17rpx;
}

.progress-bar {
    width: 397rpx;
    height: 4rpx;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 100rpx;
    position: absolute;
    left: 263rpx;
    top: 28rpx;
    overflow: visible;
}

.progress-played {
    width: 100rpx;
    height: 4rpx;
    background: #4573ff;
    border-radius: 100rpx;
    position: absolute;
}

.progress-dot {
    width: 18rpx;
    height: 18rpx;
    border-radius: 9rpx;
