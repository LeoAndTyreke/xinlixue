
.mon-picker{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0;
  display: flex;
  justify-content:center;
  align-items:flex-end;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 110;
}
.mon-pic-one{
  position: relative;
  width: 100%;
  height: 313rpx;
  font-size: 35rpx;
  line-height: 95rpx;
  text-align: center;
  color: #333;
  background-color: #f8f8f8;
  overflow: hidden;
}
.mon-pic-but{
  position: relative;
  width: 100%;
  height: 95rpx;
  margin-bottom: 5rpx;
  background-color: #fff;
  overflow: hidden;
}
.mon-pic-f{
  position: absolute;
  bottom: 0;
  left: 0;
  color: #666;
}

.share-butn{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  opacity:0;
}