.lesson-item {
    position: relative;
    width: 750rpx;
    height: 273rpx;
}

.lesson-cover {
    width: 168rpx;
    height: 213rpx;
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    border-radius: 8rpx;
    background-color:#ccc;
}

.lesson-title {
    width: 502rpx;
    height: 96rpx;
    line-height: 48rpx;
    font-size: 34rpx;
    position: absolute;
    left: 218rpx;
    top: 30rpx;
}

.teacher-icon {
    width: 24rpx;
    height: 18rpx;
    position: absolute;
    left:0;
    top: 2rpx;
}

.les-teacher-name {
    width: 126rpx;
    left: 230rpx;
    overflow: hidden;
}

.time-icon {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    left: 0;
    top: 2rpx;
}

.duration {
    width: 150rpx;
    left: 370rpx;
    overflow: hidden;
}

.lesson-gray-info {
    height: 26rpx;
    line-height: 26rpx;
    font-size: 26rpx;
    color: #666;
    position: absolute;
    top: 150rpx;
    text-indent: 30rpx;
}

.lesson-price {
    width: 300rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 30rpx;
    color: #ff4d10;
    position: absolute;
    left: 218rpx;
    top: 203rpx;
}
.lesson-price2 {
    font-size: 44rpx;
    font-weight: bold;
}

.lesson-record {
    width: 500rpx;
    height: 26rpx;
    line-height: 26rpx;
    font-size: 30rpx;
    color: #666;
    position: absolute;
    left: 218rpx;
    bottom: 32rpx;
}

.lesson-earn {
	height: 46rpx;
	line-height: 46rpx;
	position: absolute;
	left: 552rpx;
	bottom: 30rpx;
	font-size: 26rpx;
	color: #5695FF;
	border-radius: 100rpx;
	background-color: rgba(86, 149, 255, .1);
	padding: 0 12rpx;
}


.lesson-null{
  position: relative;
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
  line-height: 100rpx;
}